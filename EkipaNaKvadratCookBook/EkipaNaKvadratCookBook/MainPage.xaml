<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EkipaNaKvadratCookBook.ViewModels"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="EkipaNaKvadratCookBook.MainPage"
             x:DataType="viewmodels:MainViewModel"
             NavigationPage.HasNavigationBar="False"
             Style="{StaticResource PageStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackLayout  Orientation="Horizontal"
                      Padding="15,13,0,0"
                      BackgroundColor="Transparent">

            <Label VerticalOptions="Center"
                   Margin="0,0,0,0"
                       HorizontalOptions="CenterAndExpand"
                       Text="Chef's Secret"
                       FontSize="44"
                       MaxLines="1"
                       FontFamily="CB"
                       TextColor="WhiteSmoke" />
            <Frame Padding="-2,-10,30,-6"
                   Margin="12,0,-40,5"
                   CornerRadius="25"
                   HasShadow="True"
                   Style="{StaticResource SettingsBackground}"
                   Grid.Row="0">
                <ImageButton Style="{StaticResource SettingsIcon}"
                             Aspect="AspectFit"
                             BackgroundColor="Transparent"
                             Padding="12,10,22,5"
                             Command="{Binding SettingsPageCommand}"
                             VerticalOptions="Center"
                             HorizontalOptions="End"
                             WidthRequest="80"
                             HeightRequest="80" />
            </Frame>
        </StackLayout>
        <StackLayout Grid.Row="1"
                     Padding="0,20,0,10"
                     BackgroundColor="Transparent">
            <Frame Padding="0,5,10,3"
                   Margin="15,0,18,0"
                   CornerRadius="7"
                   BackgroundColor="WhiteSmoke">
                <SearchBar Placeholder="Search by ingredient"
                       PlaceholderColor="Black"
                       Text="{Binding SearchParam}"
                       TextColor="Black"
                       MaxLength="20"
                       CharacterSpacing="0.1"
                       Keyboard="Default">
                    <SearchBar.Behaviors>
                        <xct:EventToCommandBehavior
                            EventName="TextChanged"
                            Command="{Binding SearchParamsChangedCommand}" />
                    </SearchBar.Behaviors>
                </SearchBar>
            </Frame>
        </StackLayout>

        <Grid Grid.Row="2"
              Padding="10">
            <CollectionView BackgroundColor="Transparent"
                            ItemsSource="{Binding TypesOfRecipes}"
                            SelectedItem="{Binding SelectedType}"
                            SelectionChangedCommand="{Binding SelectedTypeChanged}"
                            SelectionMode="Single">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Grid.Row="1"
                                     Orientation="Vertical"
                                     Span="2"
                                     HorizontalItemSpacing="5"
                                     VerticalItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:NameViewModel">

                        <Grid>
                            <!--Selected item color-->
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor"
                                                    Value="Transparent" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Frame HasShadow="False"
                                   Padding="-2,-2,2,2"
                                   Margin="5"
                                   CornerRadius="10"
                                   Style="{StaticResource CardFrame}">

                                <Frame HasShadow="False"
                                       Padding="0"
                                       CornerRadius="10">
                                    <Grid>
                                        <Image Source="{Binding Image}"
                                               WidthRequest="160"
                                               HeightRequest="160"
                                               Aspect="AspectFill" />
                                        <Frame
                                               Style="{StaticResource FrameFade}"
                                               Padding="0">

                                            <Label FontSize="24"
                                                   BackgroundColor="Transparent"
                                                   TextColor="WhiteSmoke"
                                                   FontFamily="OSM"
                                                   Text="{Binding Name}"
                                                   HorizontalTextAlignment="Center"
                                                   VerticalOptions="Center" />
                                        </Frame>
                                    </Grid>
                                </Frame>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>