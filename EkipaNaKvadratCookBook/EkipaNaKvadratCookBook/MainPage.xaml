<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EkipaNaKvadratCookBook.ViewModels"
             x:Class="EkipaNaKvadratCookBook.MainPage"
             x:DataType="viewmodels:MainViewModel"
              NavigationPage.HasNavigationBar="False"
             BackgroundColor="WhiteSmoke">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Frame Padding="0"
               HasShadow="True"
               Grid.Row="0">
            <StackLayout  Orientation="Horizontal"
                          HeightRequest="100"
                          Padding="15,0"
                          BackgroundColor="#F2BD1D">

                <Label VerticalOptions="Center"
                       HorizontalOptions="CenterAndExpand"
                       Text="Chef's Secret"
                       FontSize="44"
                       MaxLines="1"
                       FontFamily="CB"
                       TextColor="GhostWhite" />

                <ImageButton Source="settingsBlue"
                             Aspect="AspectFit"
                             BackgroundColor="Transparent"
                             VerticalOptions="Center"
                             HorizontalOptions="End"
                             WidthRequest="50"
                             HeightRequest="50" />
            </StackLayout>
        </Frame>
        <Grid Grid.Row="1"
              Padding="10">
            <CollectionView BackgroundColor="Transparent"
                            ItemsSource="{Binding TypesOfRecipes}"
                            SelectedItem="{Binding SelectedType}"
                            SelectionChangedCommand="{Binding SelectedTypeChanged}"
                            SelectionMode="Single">

                <CollectionView.Footer>
                    <StackLayout Padding="20">
                        <Image Source="icontransparent.png"
                                   Aspect="AspectFit"
                                   BackgroundColor="Transparent"
                                   HorizontalOptions="CenterAndExpand"
                                   WidthRequest="200"
                                   HeightRequest="120" />
                    </StackLayout>
                </CollectionView.Footer>

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Grid.Row="1"
                                     Orientation="Vertical"
                                     Span="2"
                                     HorizontalItemSpacing="5"
                                     VerticalItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:TypeViewModel">

                        <Grid>
                            <!--Selected item color-->
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor"
                                                    Value="Transparent" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Frame HasShadow="false"
                                   Padding="0"
                                   Margin="5"
                                   CornerRadius="10">
                                <Grid>
                                    <Image Source="{Binding Image}"
                                           WidthRequest="160"
                                           HeightRequest="160"
                                           Aspect="AspectFill" />
                                    <Frame
                                           BackgroundColor="Transparent"
                                           Padding="0">
                                        <Label FontSize="24"
                                               BackgroundColor="#1f000000"
                                               TextColor="White"
                                               FontFamily="OSB"
                                               Text="{Binding Type}"
                                               HorizontalTextAlignment="Center"
                                               VerticalOptions="Center" />
                                    </Frame>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>