<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EkipaNaKvadratCookBook.ViewModels"
             x:Class="EkipaNaKvadratCookBook.MainPage"
             x:DataType="viewmodels:MainViewModel"
               >

    <Grid Padding="40" BackgroundColor="AntiqueWhite"
          >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            
        </Grid.RowDefinitions>
        <StackLayout Orientation="Horizontal" Grid.Row="0" HeightRequest="75">
            <Label HorizontalOptions="CenterAndExpand" Text="Cookbook" FontSize="40"  TextColor="Black"/>
            <ImageButton Source="Settings.png" Aspect="AspectFit" BackgroundColor="Transparent"  HorizontalOptions="CenterAndExpand" WidthRequest="35" ></ImageButton>
        </StackLayout>


        <CollectionView Grid.Row="1"
                        BackgroundColor="Transparent"
                        ItemsSource="{Binding TypesOfRecipes}"
                        SelectedItem="{Binding SelectedType}"
                        SelectionChangedCommand="{Binding SelectedTypeChanged}"
                        SelectionMode="Single" IsVisible="True" IsGrouped="False">

           

            <CollectionView.ItemsLayout>
                <GridItemsLayout Grid.Row="1"  Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:TypeViewModel">
                    <Grid >
                        <Frame HasShadow="True"
                               Padding="0"
                               Margin="3"
                               CornerRadius="10">
                            <Grid>
                                <Image Source="{Binding Image}"
                                       WidthRequest="160"
                                       HeightRequest="160"
                                       Aspect="AspectFill" />
                                <Frame 
                                       BackgroundColor="#1F000000"
                                       Padding="0" >
                                    <Label FontSize="Large"
                                           BackgroundColor="#2F000000"
                                           TextColor="WhiteSmoke"
                                           Text="{Binding Name}"
                                           HorizontalTextAlignment="Center"
                                           VerticalOptions="Center" />
                                </Frame>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>