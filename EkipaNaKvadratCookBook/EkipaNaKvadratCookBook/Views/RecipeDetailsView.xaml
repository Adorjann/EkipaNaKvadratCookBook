<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EkipaNaKvadratCookBook.ViewModels"
             x:Class="EkipaNaKvadratCookBook.Views.RecipeDetailsView"
             x:DataType="viewmodels:RecipeDetailsViewModel"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush  StartPoint="0,0"
                                 EndPoint="0,1">
            <GradientStop Color="#9028ad60"
                              Offset="0.1" />
            <GradientStop Color="#28ad60"
                              Offset="0.45" />
            <GradientStop Color="WhiteSmoke"
                              Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="0,0,0,0">
            <Image Source="{Binding BackgroundImage}" />
            <Frame Padding="0,0,0,3"
                   Margin="0,0,0,0">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0.5,0"
                                         EndPoint="0.5,0.5">
                        <GradientStop Color="Transparent"
                                      Offset="0.0" />
                        <GradientStop Color="Transparent"
                                      Offset="0.5" />
                        <GradientStop Color="#763aac73"
                                      Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>
                <Frame Padding="0"
                   BackgroundColor="#1f000000" />
            </Frame>

            <StackLayout  Orientation="Horizontal" BackgroundColor="Transparent">
                <Frame Padding="60,45,12,20"
                   Margin="-50,-34,12,210"
                   CornerRadius="30"
                   HasShadow="False"
                   Grid.Row="0"
                   BackgroundColor="WhiteSmoke">
                    <ImageButton Source="blackBack"
                             BackgroundColor="Transparent"
                             Aspect="AspectFit"
                             Margin="6,20,5,0"
                             Command="{Binding BackToRecipeListCommand}"
                             VerticalOptions="Center"
                             HorizontalOptions="Start"
                             WidthRequest="32"
                             HeightRequest="40" />
                </Frame>
            </StackLayout>
        </Grid>
        <StackLayout Grid.Row="0"
                     BackgroundColor="Transparent"
                     Margin="66,0,0,0"
                     InputTransparent="True">
            <Label Text="{Binding Name}"
                   FontSize="26"
                   FontFamily="OSM"
                   HorizontalTextAlignment="Center"
                   TextColor="WhiteSmoke"
                   Padding="0,15,0,10"
                   InputTransparent="True">
                <Label.Background>
                    <LinearGradientBrush StartPoint="0.5,0"
                                         EndPoint="0.5,1">
                        <GradientStop Color="#9f000000"
                                  Offset="0.1" />
                        <GradientStop Color="#7f000000"
                                  Offset="0.2" />
                        <GradientStop Color="#6f000000"
                                  Offset="0.3" />
                        <GradientStop Color="#5f000000"
                                  Offset="0.4" />
                        <GradientStop Color="#4f000000"
                                  Offset="0.5" />
                        <GradientStop Color="#4f000000"
                                  Offset="0.6" />
                        <GradientStop Color="#3f000000"
                                  Offset="0.7" />
                        <GradientStop Color="#3f000000"
                                  Offset="0.8" />
                        <GradientStop Color="Transparent"
                                  Offset="1.0" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
        </StackLayout>

        <Frame Grid.Row="0"
               Padding="0,0,0,0"
               Margin="0,-80,0,120"
               InputTransparent="True">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="0,1">
                    <GradientStop Color="Transparent"
                                      Offset="0.0" />
                    <GradientStop Color="#203aac73"
                                  Offset="0.5" />
                    <GradientStop Color="#103aac73"
                                  Offset="1.0" />
                </LinearGradientBrush>
            </Frame.Background>
        </Frame>
        <Frame Padding="0,-50,0,30"
               Margin="0,20,0,80"
               Grid.Row="1">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="0,1">
                    <GradientStop Color="#163aac73"
                                  Offset="0.1" />
                    <GradientStop Color="Transparent"
                                  Offset="1.0" />
                </LinearGradientBrush>
            </Frame.Background>
            <Label FontSize="16"
                   Padding="15,20,15,30"
                   Margin="0,-20,0,-10"
                   BackgroundColor="#103aac73"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   FontFamily="OSM"
                   Text="{Binding LongDescription}">
                <Label.Background>
                    <RadialGradientBrush Radius="0.3" Center="0.5,0.7">
                        <GradientStop Color="#203aac73"
                                  Offset="0.1" />
                        <GradientStop Color="Transparent"
                                  Offset="1.0" />
                    </RadialGradientBrush>
                </Label.Background>
            </Label>
        </Frame>
    </Grid>
</ContentPage>